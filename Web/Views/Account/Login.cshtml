@model QRMenuSaaS.Core.DTOs.LoginDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap - QR Menü</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Inter", "Segoe UI", sans-serif;
            background: radial-gradient(circle at top, #93c5fd, #1e3a8a);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-card {
            max-width: 460px;
            margin: 0 auto;
        }

        .login-card .card {
            border: 0;
            border-radius: 24px;
            box-shadow: 0 30px 50px rgba(15, 23, 42, 0.25);
        }

        .login-card .card-body {
            padding: 40px;
        }

        .brand-badge {
            width: 56px;
            height: 56px;
            border-radius: 18px;
            background: rgba(37, 99, 235, 0.15);
            color: #1d4ed8;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
            font-size: 22px;
        }

        .form-control {
            border-radius: 12px;
            border: 1px solid #e2e8f0;
            padding: 10px 14px;
        }

        .btn-primary {
            background: #2563eb;
            border-color: #2563eb;
            border-radius: 12px;
            padding: 12px 16px;
            box-shadow: 0 12px 24px rgba(37, 99, 235, 0.25);
        }

        .helper-text {
            color: #64748b;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-card">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <div class="brand-badge">
                            <i class="fas fa-qrcode"></i>
                        </div>
                        <h3 class="mb-2">QR Menü Paneli</h3>
                        <p class="helper-text mb-4">Hesabınıza giriş yapın</p>
                    </div>

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, "E-posta")
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "ornek@email.com" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, "Şifre")
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "••••••••" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-check mb-4">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.RememberMe, "Beni hatırla", new { @class = "form-check-label" })
                        </div>

                        <button type="submit" class="btn btn-primary btn-block btn-lg">Giriş Yap</button>
                    }
                </div>
            </div>
        </div>
    </div>

</body>
</html>
