<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QR Menü SaaS</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand font-weight-bold" href="@Url.Action("Index", "Home", new { area = "" })">
                QR Menü SaaS
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Özellikler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#pricing">Planlar</a>
                    </li>
                </ul>
                <div class="navbar-nav">
                    <a class="nav-link" href="/panel/login">Panel Girişi</a>
                    <a class="btn btn-primary ml-lg-2" href="/admin/login">Admin</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
    </div>

    <footer class="site-footer">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <span>&copy; @DateTime.Now.Year QR Menü SaaS</span>
            <span class="text-muted">Tüm restoranlar için hızlı QR menü yönetimi</span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
