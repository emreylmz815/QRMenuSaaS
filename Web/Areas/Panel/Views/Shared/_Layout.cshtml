@{
    var user = ViewBag.CurrentUser as QRMenuSaaS.Web.Infrastructure.UserCookieData;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QR Menü Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --sidebar: #0f172a;
            --sidebar-accent: #1e293b;
            --text: #0f172a;
            --muted: #64748b;
            --surface: #ffffff;
            --surface-muted: #f8fafc;
            --border: #e2e8f0;
            --shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
        }

        body {
            font-family: "Inter", "Segoe UI", sans-serif;
            background: #f4f6fb;
            color: var(--text);
        }

        .app-shell {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 260px;
            background: linear-gradient(180deg, #0f172a, #111827);
            color: #e2e8f0;
            padding: 24px 20px;
            overflow-y: auto;
            box-shadow: 8px 0 24px rgba(15, 23, 42, 0.15);
        }

        .sidebar-brand {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 32px;
        }

        .sidebar-brand-icon {
            width: 44px;
            height: 44px;
            border-radius: 14px;
            background: rgba(37, 99, 235, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #93c5fd;
            font-size: 20px;
        }

        .sidebar small {
            color: #94a3b8;
        }

        .sidebar .nav-link {
            color: #cbd5f5;
            padding: 12px 14px;
            border-radius: 12px;
            margin-bottom: 6px;
            transition: all 0.2s ease;
            font-weight: 500;
        }

        .sidebar .nav-link i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background: rgba(148, 163, 184, 0.15);
            color: #ffffff;
        }

        .sidebar .nav-section {
            text-transform: uppercase;
            letter-spacing: 0.12em;
            font-size: 11px;
            color: #64748b;
            margin: 18px 12px 8px;
        }

        .main-content {
            margin-left: 260px;
            flex: 1;
            padding: 28px 32px 48px;
        }

        .app-topbar {
            background: rgba(255, 255, 255, 0.92);
            border: 1px solid var(--border);
            border-radius: 18px;
            padding: 16px 24px;
            box-shadow: var(--shadow);
            margin-bottom: 24px;
            backdrop-filter: blur(8px);
        }

        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 12px;
            margin-bottom: 24px;
        }

        .page-title {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 4px;
        }

        .page-subtitle {
            color: var(--muted);
            margin-bottom: 0;
        }

        .card {
            border: 0;
            border-radius: 18px;
            box-shadow: var(--shadow);
        }

        .card-header {
            background: transparent;
            border-bottom: 1px solid var(--border);
            padding: 18px 24px;
            font-weight: 600;
        }

        .card-body {
            padding: 24px;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            border-bottom: 0;
            color: var(--muted);
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.08em;
        }

        .table tbody tr {
            border-top: 1px solid #f1f5f9;
        }

        .badge-soft-success {
            background: rgba(34, 197, 94, 0.16);
            color: #15803d;
            font-weight: 600;
        }

        .badge-soft-secondary {
            background: rgba(148, 163, 184, 0.2);
            color: #475569;
            font-weight: 600;
        }

        .badge-soft-primary {
            background: rgba(37, 99, 235, 0.16);
            color: #1d4ed8;
            font-weight: 600;
        }

        .stat-card {
            border: 1px solid var(--border);
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            margin-right: 16px;
        }

        .stat-value {
            font-size: 26px;
            font-weight: 700;
        }

        .stat-label {
            color: var(--muted);
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.08em;
        }

        .list-group-item {
            border: 0;
            border-radius: 14px;
            margin-bottom: 10px;
            box-shadow: 0 8px 20px rgba(15, 23, 42, 0.06);
        }

        .btn-primary {
            background: var(--primary);
            border-color: var(--primary);
            box-shadow: 0 12px 24px rgba(37, 99, 235, 0.2);
        }

        .btn-primary:hover {
            background: var(--primary-dark);
            border-color: var(--primary-dark);
        }

        .alert {
            border-radius: 14px;
            border: 0;
            box-shadow: 0 10px 20px rgba(15, 23, 42, 0.08);
        }

        .form-control,
        .custom-select {
            border-radius: 12px;
            border: 1px solid var(--border);
            padding: 10px 14px;
        }

        .input-group-text {
            border-radius: 12px 0 0 12px;
            border: 1px solid var(--border);
        }

        .input-group .form-control {
            border-radius: 0 12px 12px 0;
        }

        .btn-outline-secondary {
            border-radius: 12px;
        }

        @media (max-width: 991px) {
            .sidebar {
                position: static;
                width: 100%;
                height: auto;
                margin-bottom: 20px;
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="app-shell">
        <div class="sidebar">
            <div class="sidebar-brand">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-qrcode"></i>
                </div>
                <div>
                    <h5 class="mb-1">QR Menü</h5>
                    <small>İşletme Paneli</small>
                </div>
            </div>
            <div class="nav flex-column">
                <div class="nav-section">Genel</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")"
                   href="@Url.Action("Index", "Dashboard", new { area = "Panel" })">
                    <i class="fas fa-chart-line"></i> Dashboard
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Categories" ? "active" : "")"
                   href="@Url.Action("Index", "Categories", new { area = "Panel" })">
                    <i class="fas fa-list"></i> Kategoriler
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Products" ? "active" : "")"
                   href="@Url.Action("Index", "Products", new { area = "Panel" })">
                    <i class="fas fa-utensils"></i> Ürünler
                </a>
                <div class="nav-section">Görünüm</div>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Theme" ? "active" : "")"
                   href="@Url.Action("Index", "Theme", new { area = "Panel" })">
                    <i class="fas fa-palette"></i> Tema Ayarları
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "QRCode" ? "active" : "")"
                   href="@Url.Action("Index", "QRCode", new { area = "Panel" })">
                    <i class="fas fa-qrcode"></i> QR Kod
                </a>
                <div class="nav-section">Hesap</div>
                <a class="nav-link" href="@Url.Action("Logout", "Account", new { area = "Panel" })">
                    <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                </a>
            </div>
        </div>

        <div class="main-content">
            <div class="app-topbar d-flex align-items-center justify-content-between">
                <div>
                    <strong>@ViewBag.Title</strong>
                </div>
                <div class="text-muted">
                    <i class="fas fa-user-circle mr-1"></i> @(user?.FullName ?? "Kullanıcı")
                </div>
            </div>

            <div class="container-fluid p-0">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
