 
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>QR Kod Yazdır - @ViewBag.TenantName</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: "Inter", "Segoe UI", sans-serif;
            text-align: center;
            margin: 40px;
            background: #f8fafc;
            color: #0f172a;
        }

        .qr-container {
            background: #ffffff;
            border-radius: 24px;
            padding: 40px;
            display: inline-block;
            box-shadow: 0 25px 50px rgba(15, 23, 42, 0.12);
        }

        .qr-code {
            margin: 20px 0;
        }

        .tenant-name {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .url {
            font-size: 14px;
            color: #64748b;
            margin-top: 20px;
        }

        .toolbar {
            margin-bottom: 24px;
        }

        .toolbar .btn {
            border: 0;
            padding: 10px 18px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            margin: 0 6px;
        }

        .btn-primary {
            background: #2563eb;
            color: #ffffff;
        }

        .btn-secondary {
            background: #e2e8f0;
            color: #0f172a;
        }

        @@media print {
            .no-print {
                display: none;
            }

            .qr-container {
                box-shadow: none;
                border: 1px solid #000;
            }
        }
    </style>
</head>
<body>
    <div class="no-print toolbar">
        <button onclick="window.print()" class="btn btn-primary">Yazdır</button>
        <button onclick="window.close()" class="btn btn-secondary">Kapat</button>
    </div>

    <div class="qr-container">
        <div class="tenant-name">@ViewBag.TenantName</div>
        <div class="qr-code">
            <img src="data:image/png;base64,@ViewBag.QRCodeBase64" alt="QR Code" style="width: 400px; height: 400px;" />
        </div>
        <div class="url">@ViewBag.MenuUrl</div>
        <p style="margin-top: 20px; font-size: 16px;">
            QR kodu okutarak menümüzü görüntüleyebilirsiniz
        </p>
    </div>
</body>
</html>
