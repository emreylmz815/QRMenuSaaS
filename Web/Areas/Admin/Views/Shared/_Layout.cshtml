<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Super Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        :root {
            --admin-primary: #8b5cf6;
            --admin-dark: #6d28d9;
            --surface: #ffffff;
            --border: #e2e8f0;
            --text: #0f172a;
            --muted: #64748b;
            --shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
        }

        body {
            font-family: "Inter", "Segoe UI", sans-serif;
            background: #f5f6fb;
            color: var(--text);
        }

        .admin-shell {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 260px;
            background: linear-gradient(180deg, #111827, #1f2937);
            color: #f8fafc;
            padding: 24px 20px;
            box-shadow: 8px 0 24px rgba(15, 23, 42, 0.15);
        }

        .sidebar h4 {
            font-weight: 700;
        }

        .sidebar .nav-link {
            color: #dbeafe;
            padding: 12px 14px;
            border-radius: 12px;
            margin-bottom: 6px;
            font-weight: 500;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background: rgba(139, 92, 246, 0.2);
            color: #ffffff;
        }

        .main-content {
            margin-left: 260px;
            flex: 1;
            padding: 28px 32px 48px;
        }

        .admin-topbar {
            background: rgba(255, 255, 255, 0.92);
            border: 1px solid var(--border);
            border-radius: 18px;
            padding: 16px 24px;
            box-shadow: var(--shadow);
            margin-bottom: 24px;
            backdrop-filter: blur(8px);
        }

        .card {
            border: 0;
            border-radius: 18px;
            box-shadow: var(--shadow);
        }

        .card-body {
            padding: 24px;
        }

        .table thead th {
            border-bottom: 0;
            color: var(--muted);
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.08em;
        }

        .table tbody tr {
            border-top: 1px solid #f1f5f9;
        }

        .badge-soft-success {
            background: rgba(34, 197, 94, 0.16);
            color: #15803d;
            font-weight: 600;
        }

        .badge-soft-danger {
            background: rgba(239, 68, 68, 0.16);
            color: #b91c1c;
            font-weight: 600;
        }

        .btn-primary {
            background: var(--admin-primary);
            border-color: var(--admin-primary);
            box-shadow: 0 12px 24px rgba(139, 92, 246, 0.25);
        }

        .btn-primary:hover {
            background: var(--admin-dark);
            border-color: var(--admin-dark);
        }

        .alert {
            border-radius: 14px;
            border: 0;
            box-shadow: 0 10px 20px rgba(15, 23, 42, 0.08);
        }

        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 12px;
            margin-bottom: 24px;
        }

        .page-title {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 4px;
        }

        .page-subtitle {
            color: var(--muted);
            margin-bottom: 0;
        }

        @media (max-width: 991px) {
            .sidebar {
                position: static;
                width: 100%;
                height: auto;
                margin-bottom: 20px;
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="admin-shell">
        <div class="sidebar">
            <div class="mb-4">
                <h4 class="mb-1">Super Admin</h4>
                <small class="text-muted">QR Menü Yönetim</small>
            </div>
            <nav class="nav flex-column">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")" href="@Url.Action("Index", "Dashboard")">
                    <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Tenants" ? "active" : "")" href="@Url.Action("Index", "Tenants")">
                    <i class="fas fa-building mr-2"></i> Tenant'lar
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Plans" ? "active" : "")" href="@Url.Action("Index", "Plans")">
                    <i class="fas fa-box mr-2"></i> Planlar
                </a>
                <a class="nav-link" href="@Url.Action("Logout", "Account")">
                    <i class="fas fa-sign-out-alt mr-2"></i> Çıkış
                </a>
            </nav>
        </div>

        <div class="main-content">
            <div class="admin-topbar d-flex align-items-center justify-content-between">
                <div>
                    <strong>@ViewBag.Title</strong>
                </div>
                <span class="text-muted">Yönetim Paneli</span>
            </div>
            <div class="container-fluid p-0">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
