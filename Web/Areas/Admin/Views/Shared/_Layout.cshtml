<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Super Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 250px;
            background: #1a1a2e;
            color: white;
        }

            .sidebar .nav-link {
                color: #eee;
                padding: 12px 20px;
            }

                .sidebar .nav-link:hover {
                    background: #16213e;
                }

        .main-content {
            margin-left: 250px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="p-3 border-bottom">
            <h4>Super Admin</h4>
        </div>
        <nav class="nav flex-column mt-3">
            <a class="nav-link" href="@Url.Action("Index", "Dashboard")">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a class="nav-link" href="@Url.Action("Index", "Tenants")">
                <i class="fas fa-building"></i> Tenant'lar
            </a>
            <a class="nav-link" href="@Url.Action("Index", "Plans")">
                <i class="fas fa-box"></i> Planlar
            </a>
            <a class="nav-link" href="@Url.Action("Logout", "Account")">
                <i class="fas fa-sign-out-alt"></i> Çıkış
            </a>
        </nav>
    </div>

    <div class="main-content">
        <nav class="navbar navbar-light bg-white shadow-sm">
            <span class="navbar-brand">@ViewBag.Title</span>
        </nav>
        <div class="container-fluid mt-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>