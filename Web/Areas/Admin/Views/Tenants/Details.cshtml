@using System.Linq
@{
    ViewBag.Title = "Tenant Detayı";
    var tenant = ViewBag.Tenant;
    var users = ViewBag.Users as IEnumerable<QRMenuSaaS.Core.Entities.User>;
}

<div class="page-header">
    <div>
        <h2 class="page-title">@tenant?.name</h2>
        <p class="page-subtitle">@tenant?.email</p>
    </div>
    <div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left mr-1"></i> Tenant Listesi
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3">Genel Bilgiler</h5>
                <p><strong>Subdomain:</strong> @tenant?.subdomain</p>
                <p><strong>Plan:</strong> @tenant?.plan_name</p>
                <p><strong>Abonelik Durumu:</strong> @tenant?.subscription_status</p>
                <p><strong>Abonelik Tarihleri:</strong> @tenant?.start_date - @tenant?.end_date</p>
                <p><strong>Ürün Sayısı:</strong> @ViewBag.ProductCount</p>
                <p><strong>Kategori Sayısı:</strong> @ViewBag.CategoryCount</p>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3">Hızlı İşlemler</h5>
                <div class="d-flex flex-wrap gap-2">
                    @if (tenant != null && tenant.status == "active")
                    {
                        using (Html.BeginForm("Suspend", "Tenants", new { id = tenant.id }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning mr-2" onclick="return confirm('Tenant askıya alınsın mı?')">
                                <i class="fas fa-pause mr-1"></i> Askıya Al
                            </button>
                        }
                    }
                    else if (tenant != null)
                    {
                        using (Html.BeginForm("Resume", "Tenants", new { id = tenant.id }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success mr-2">
                                <i class="fas fa-play mr-1"></i> Aktifleştir
                            </button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="mb-3">Kullanıcılar</h5>
        @if (users != null && users.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>İsim</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in users)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>@(user.IsDeleted ? "Pasif" : "Aktif")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted mb-0">Tenant'a bağlı kullanıcı bulunamadı.</p>
        }
    </div>
</div>
