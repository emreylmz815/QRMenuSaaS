@model IEnumerable<dynamic>
@{
    ViewBag.Title = "Tenant Yönetimi";
}

<div class="page-header">
    <div>
        <h2 class="page-title">Tenant'lar</h2>
        <p class="page-subtitle">Tüm müşterileri tek ekrandan yönetin</p>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Tenant</th>
                        <th>Subdomain</th>
                        <th>Plan</th>
                        <th>Durum</th>
                        <th>Ürün Sayısı</th>
                        <th>Abonelik Bitiş</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tenant in Model)
                    {
                        <tr>
                            <td>
                                <strong>@tenant.name</strong><br />
                                <small class="text-muted">@tenant.email</small>
                            </td>
                            <td>@tenant.subdomain</td>
                            <td>@(tenant.plan_name ?? "N/A")</td>
                            <td>
                                @if (tenant.status == "active")
                                {
                                    <span class="badge badge-soft-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-soft-danger">Askıda</span>
                                }
                            </td>
                            <td>@tenant.product_count</td>
                            <td>
                                @if (tenant.subscription_end_date != null)
                                {
                                    @((DateTime)tenant.subscription_end_date).ToString("dd.MM.yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id = tenant.id })" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (tenant.status == "active")
                                {
                                    using (Html.BeginForm("Suspend", "Tenants", new { id = tenant.id }, FormMethod.Post, new { style = "display:inline;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Askıya almak istediğinize emin misiniz?')">
                                            <i class="fas fa-pause"></i>
                                        </button>
                                    }
                                }
                                else
                                {
                                    using (Html.BeginForm("Resume", "Tenants", new { id = tenant.id }, FormMethod.Post, new { style = "display:inline;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-play"></i>
                                        </button>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
