@{
    ViewBag.Title = "Dashboard";
    var stats = ViewBag.Stats;
    decimal monthlyRevenue = 0;

    if (stats != null && stats.monthly_revenue != null)
    {
        decimal.TryParse(stats.monthly_revenue.ToString(), out monthlyRevenue);
    }
}

<div class="page-header">
    <div>
        <h2 class="page-title">Super Admin Dashboard</h2>
        <p class="page-subtitle">Platform genelindeki KPI'ların özeti</p>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="text-muted text-uppercase small">Toplam Tenant</div>
                    <div class="h4 mb-0">@stats?.tenant_count</div>
                </div>
                <span class="text-primary display-4"><i class="fas fa-building"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="text-muted text-uppercase small">Aktif Tenant</div>
                    <div class="h4 mb-0">@stats?.active_tenant_count</div>
                </div>
                <span class="text-success display-4"><i class="fas fa-check-circle"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="text-muted text-uppercase small">Kullanıcı Sayısı</div>
                    <div class="h4 mb-0">@stats?.user_count</div>
                </div>
                <span class="text-info display-4"><i class="fas fa-users"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="text-muted text-uppercase small">Aktif Abonelik</div>
                    <div class="h4 mb-0">@stats?.active_subscription_count</div>
                </div>
                <span class="text-warning display-4"><i class="fas fa-file-invoice"></i></span>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-2">Son 30 Gün Gelir</h5>
                <div class="display-4 font-weight-bold">
                    @monthlyRevenue.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))
                </div>
                <p class="text-muted mb-0">Tamamlanan ödemeler baz alınır.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3">Hızlı Erişim</h5>
                <div class="list-group">
                    <a class="list-group-item list-group-item-action" href="@Url.Action("Index", "Tenants")">
                        <strong>Tenant Yönetimi</strong>
                        <div class="small text-muted">Aktif müşterileri görüntüle</div>
                    </a>
                    <a class="list-group-item list-group-item-action" href="@Url.Action("Index", "Plans")">
                        <strong>Plan Yönetimi</strong>
                        <div class="small text-muted">Paket ve fiyat bilgilerini incele</div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
